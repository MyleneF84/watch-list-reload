<h1>List <%= @list.name %></h1>
<ul>

<% @list.bookmarks.each do |bookmark| %>
  <li><%= bookmark.movie.title %>
  <%= "--> (#{bookmark.comment})" %></li>
<%= link_to "Delete this bookmark", bookmark, data: {turbo_method: :delete, turbo_confirm: "Are you sure ?"}  %>
<% end %>
</ul>


<br>
<%= link_to "Add a movie", new_list_bookmark_path(@list) %>
<%= link_to "Back to lists", lists_path %>
